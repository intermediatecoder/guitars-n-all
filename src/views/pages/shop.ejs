<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Shop | Guitars-n-All</title>

    <%- include("../partials/head"); %>

    <link rel="stylesheet" href="/assets/css/shop.css" />
  </head>

  <body style="background-color: light">
    <header><%- include("../partials/header"); %></header>
    <div>
      <div class="flex flex-wrap">
        <!-- card -->
        <% if(data.guitars) { for (const product of data.guitars) { %>

        <a class="product-link" href="/products/<%- product.id %>">
          <div class="product-card">
            <img src="<%- product.image %>" class="cover-image" />
            <div class="product-info-box">
              <h2 class="product-title"><%= product.name %></h2>
              <div class="product-info"><%- product.features %></div>
            </div>
            <div class="Price">
              <h4>Prices</h4>
              <% for (const price of product.prices) { %>
              <p>&#x20B9;&nbsp;<%= price.price %> <a class="add-to-cart" href="/cart/add-to-cart?seller_product_id=<%= price.id %>">Add to cart</a></p>
              
              <% } %>
            </div>
            <div class="button-buy">
              <div class="product-tags">
                <p class="product-tag">guitar</p>
                <p class="product-tag">acoustic</p>
                <% for (const variant of product.variants) { %>
                <p class="product-tag"><%= variant %></p>
                <% } %>
              </div>
              <div class="button-bar">
                <a href="/payment?type=buy_now&product_id=<%= product.id %>">
                  <button class="btn-product">
                    <img
                      src="https://imgs.search.brave.com/XM5qRhf8MNxqTyuAl09tjJX9ZQOzmpTK5DuE7hO8F0c/rs:fit:400:400:1/g:ce/aHR0cDovL2ZyZWV2/ZWN0b3IuY28vd3At/Y29udGVudC91cGxv/YWRzLzIwMDkvMDkv/NDk5NTgtbGlnaHRu/aW5nLWJvbHQtc3lt/Ym9sLW9mLWZsYXNo/LnBuZw"
                      width="30px"
                      height="20px" />
                    BUY NOW
                  </button>
                </a>
                <!-- <button class="btn-product">
                  <img
                    src="https://imgs.search.brave.com/aUecr4Z_iVEe733FN9ZSv5Y6B1Oj5tesNiQUOZHJFyc/rs:fit:450:470:1/g:ce/aHR0cHM6Ly9jb21w/cy5jYW5zdG9ja3Bo/b3RvLmNvbS9pY29u/LW9mLWNvbnN0cnVj/dGlvbi1jYXJ0LXZl/Y3Rvci1jbGlwYXJ0/X2NzcDQwNDI4OTAy/LmpwZw"
                    width="30px"
                    height="20px" />
                  ADD CART
                </button> -->
              </div>
            </div>
          </div>
        </a>
        <% } } %>
      </div>
    </div>
  </body>
</html>
